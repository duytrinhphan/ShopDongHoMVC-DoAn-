@model ShopDongHoMVC.Data.HangHoa

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutFrame.cshtml";
}

<h1 class="text-center" style="background-color: #002D21; color: #daa37f; padding: 10px;">CHI TIẾT SẢN PHẨM</h1>

<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="border rounded">
                    <a asp-action="Detail" asp-route-id="@Model?.MaHh">
                        <img src="@Html.DisplayFor(model => model.Hinh)" class="img-fluid rounded" alt="@Html.DisplayFor(model => model.TenHh)">
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-3">@Html.DisplayFor(model => model.TenHh)</h2>
                <p class="mb-3">Loại sản phẩm: @Html.DisplayFor(model => model.MaLoaiNavigation.TenLoai)</p>
                <h3 class="fw-bold mb-3">@Html.DisplayFor(model => model.DonGia)</h3>
                <div class="d-flex mb-4">
                    <i class="fa fa-star text-secondary"></i>
                    <i class="fa fa-star text-secondary"></i>
                    <i class="fa fa-star text-secondary"></i>
                    <i class="fa fa-star text-secondary"></i>
                    <i class="fa fa-star"></i>
                </div>
                <p class="mb-4">@Html.DisplayFor(model => model.MoTa)</p>

                <form asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model?.MaHh" method="post">
                    <div class="input-group quantity mb-4" style="width: 120px;">
                        <button class="btn btn-outline-secondary rounded-circle" type="button" id="btnMinus"><i class="fa fa-minus"></i></button>
                        <input type="text" class="form-control text-center" value="1" name="quantity" id="quantity" readonly>
                        <button class="btn btn-outline-secondary rounded-circle" type="button" id="btnPlus"><i class="fa fa-plus"></i></button>
                    </div>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 py-2 mb-4"><i class="fa fa-shopping-bag me-2"></i> Thêm vào giỏ hàng</button>
                </form>
            </div>
            <div class="col-lg-12">
                <ul class="nav nav-tabs mb-4" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="nav-about-tab" data-bs-toggle="tab" data-bs-target="#nav-about" type="button" role="tab" aria-controls="nav-about" aria-selected="true">Thông tin sản phẩm</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="nav-review-tab" data-bs-toggle="tab" data-bs-target="#nav-review" type="button" role="tab" aria-controls="nav-review" aria-selected="false">Đánh giá</button>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="nav-about" role="tabpanel" aria-labelledby="nav-about-tab">
                        @Html.DisplayFor(model => model.ChiTietHds)
                    </div>
                    <div class="tab-pane fade" id="nav-review" role="tabpanel" aria-labelledby="nav-review-tab">
                        <!-- Hiển thị phần đánh giá sản phẩm -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
