@model IEnumerable<ShopDongHoMVC.Data.HangHoa>
@{
    Layout = "~/Views/Shared/_LayoutFrame.cshtml";
}
<h1 style="text-align: center;background-color: #002D21;color: #daa37f;padding-top: 10px;">QUẢN LÝ SẢN PHẨM</h1>

<p>
    <center>
        <div class="card btn btn-primary" style="width: 212.95px; text-align: center; background-color: #002d21">

            <a asp-action="Create">Thêm Sản Phẩm</a>


        </div>
    </center>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenHh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiamGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaLoaiNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="color: black">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHh)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Hinh)" height="100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiamGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLoaiNavigation.TenLoai)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaHh">Sửa thông tin</a> |
                    <a asp-action="Details" asp-route-id="@item.MaHh">Chi tiết sản phẩm</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaHh">Xóa sản phẩm</a>
                </td>
            </tr>
        }
    </tbody>
</table>
