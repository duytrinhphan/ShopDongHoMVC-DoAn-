@model ShopDongHoMVC.Data.Loai

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutFrame.cshtml";
}

<h1 class="text-center" style="background-color: #002D21; color: #daa37f; padding: 10px;">SỬA THÔNG TIN LOẠI</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MaLoai" />

                        <div class="form-group">
                            <label asp-for="TenLoai" class="control-label">Tên Loại:</label>
                            <input asp-for="TenLoai" class="form-control" />
                            <span asp-validation-for="TenLoai" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TenLoaiAlias" class="control-label">Tên Alias:</label>
                            <input asp-for="TenLoaiAlias" class="form-control" />
                            <span asp-validation-for="TenLoaiAlias" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MoTa" class="control-label">Mô Tả:</label>
                            <input asp-for="MoTa" class="form-control" />
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Hinh" class="control-label">Hình Ảnh:</label>
                            <input asp-for="Hinh" class="form-control" />
                            <span asp-validation-for="Hinh" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
