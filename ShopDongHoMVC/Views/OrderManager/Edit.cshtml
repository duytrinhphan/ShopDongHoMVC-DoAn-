@model ShopDongHoMVC.Data.HoaDon
@{
    Layout = "~/Views/Shared/_LayoutFrame.cshtml";
}
<h1 class="text-center" style="background-color: #002D21; color: #daa37f; padding: 10px;">SỬA THÔNG TIN ĐƠN HÀNG</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MaHd" />
                        <div class="form-group">
                            <label asp-for="MaKh" class="control-label"></label>
                            <select asp-for="MaKh" class="form-control" asp-items="ViewBag.KhachHangs"></select>
                            <span asp-validation-for="MaKh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NgayDat" class="control-label"></label>
                            <input asp-for="NgayDat" class="form-control" />
                            <span asp-validation-for="NgayDat" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NgayCan" class="control-label"></label>
                            <input asp-for="NgayCan" class="form-control" />
                            <span asp-validation-for="NgayCan" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NgayGiao" class="control-label"></label>
                            <input asp-for="NgayGiao" class="form-control" />
                            <span asp-validation-for="NgayGiao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HoTen" class="control-label"></label>
                            <input asp-for="HoTen" class="form-control" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DienThoai" class="control-label"></label>
                            <input asp-for="DienThoai" class="form-control" />
                            <span asp-validation-for="DienThoai" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DiaChi" class="control-label"></label>
                            <input asp-for="DiaChi" class="form-control" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CachThanhToan" class="control-label"></label>
                            <input asp-for="CachThanhToan" class="form-control" />
                            <span asp-validation-for="CachThanhToan" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CachVanChuyen" class="control-label"></label>
                            <input asp-for="CachVanChuyen" class="form-control" />
                            <span asp-validation-for="CachVanChuyen" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhiVanChuyen" class="control-label"></label>
                            <input asp-for="PhiVanChuyen" class="form-control" />
                            <span asp-validation-for="PhiVanChuyen" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaTrangThai" class="control-label"></label>
                            <select asp-for="MaTrangThai" class="form-control" asp-items="@ViewBag.TrangThais"></select>
                            <span asp-validation-for="MaTrangThai" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaNv" class="control-label"></label>
                            <select asp-for="MaNv" class="form-control" asp-items="@ViewBag.NhanViens"></select>
                            <span asp-validation-for="MaNv" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GhiChu" class="control-label"></label>
                            <input asp-for="GhiChu" class="form-control" />
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <a asp-action="Index" class="btn btn-secondary">Trở về trang chính</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
