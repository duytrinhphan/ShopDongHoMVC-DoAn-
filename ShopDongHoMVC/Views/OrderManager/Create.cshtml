@model ShopDongHoMVC.Data.HoaDon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutFrame.cshtml";
}

<h1 class="text-center" style="background-color: #002D21; color: #daa37f; padding: 10px;">TẠO ĐƠN HÀNG MỚI</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="MaKh" class="control-label">Mã khách hàng:</label>
                    <select asp-for="MaKh" class="form-control" asp-items="@ViewBag.KhachHangs"></select>
                </div>

                <div class="form-group">
                    <label asp-for="HoTen" class="control-label">Họ tên người nhận:</label>
                    <input asp-for="HoTen" class="form-control" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DienThoai" class="control-label">Điện thoại:</label>
                    <input asp-for="DienThoai" class="form-control" />
                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DiaChi" class="control-label">Địa chỉ giao hàng:</label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhiVanChuyen" class="control-label">Phí vận chuyển:</label>
                    <input asp-for="PhiVanChuyen" class="form-control" />
                    <span asp-validation-for="PhiVanChuyen" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MaTrangThai" class="control-label">Trạng thái đơn hàng:</label>
                    <select asp-for="MaTrangThai" class="form-control" asp-items="@ViewBag.TrangThais"></select>
                </div>

                <div class="form-group">
                    <label asp-for="MaNv" class="control-label">Mã nhân viên:</label>
                    <select asp-for="MaNv" class="form-control" asp-items="@ViewBag.NhanViens"></select>
                </div>

                <div class="form-group">
                    <label asp-for="GhiChu" class="control-label">Ghi chú:</label>
                    <input asp-for="GhiChu" class="form-control" />
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Tạo mới</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>s
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
