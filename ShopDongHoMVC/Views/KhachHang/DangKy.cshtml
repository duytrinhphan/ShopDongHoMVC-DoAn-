@model ShopDongHoMVC.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng Ký Thành Viên</h1>
        <form asp-action="DangKy" enctype="multipart/form-data">
            <!-- Added method="post" -->
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.MaKh" class="form-control" />
                            <span asp-validation-for="@Model.MaKh" class="text-danger"></span> <!-- Corrected 'asp-asp-validation-for' to 'asp-validation-for' -->
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.MatKhau" class="form-control" />
                            <span asp-validation-for="@Model.MatKhau" class="text-danger"></span> <!-- Corrected 'asp-asp-validation-for' to 'asp-validation-for' -->
                        </div>

                    </div>

                    <!-- Corrected the nesting of div elements -->
                    <div class="form-item">
                        <label asp-for="@Model.HoTen" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.HoTen" class="form-control" /> <!-- Corrected 'ap-asp-for' to 'asp-for' -->
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                    </div>

                    <div class="form-check my-3">
                        <input asp-for="@Model.GioiTinh" class="form-check-input">
                        <label class="form-check-label" for="GioiTinh">Nam?</label>
                    </div>

                    <div class="form-item">
                        <label asp-for="@Model.NgaySinh" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.NgaySinh" class="form-control" /> <!-- Corrected 'ap-asp-for' to 'asp-for' -->
                        <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                    </div>
                    <!----------------------------------------------------------------->
                    <div class="form-item">
                        <label asp-for="@Model.DiaChi" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.DiaChi" class="form-control" /> <!-- Corrected 'ap-asp-for' to 'asp-for' -->
                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="@Model.DienThoai" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.DienThoai" class="form-control" /> <!-- Corrected 'ap-asp-for' to 'asp-for' -->
                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="@Model.Email" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.Email" class="form-control" /> <!-- Corrected 'ap-asp-for' to 'asp-for' -->
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label for="Hinh" class="form-label my-3">Hình<sup>*</sup></label>
                        <input type="file" name="Hinh" class="form-control" /> <!-- Corrected 'ap-asp-for' to 'asp-for' -->

                    </div>

                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Ký</button>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

