@model ShopDongHoMVC.Data.KhachHang

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutFrame.cshtml";
}

<h1 class="text-center" style="background-color: #002D21; color: #daa37f; padding: 10px;">CHI TIẾT KHÁCH HÀNG</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h4>Thông tin khách hàng</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Mật khẩu:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MatKhau)</dd>
                <dt class="col-sm-3">Họ tên:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HoTen)</dd>
                <dt class="col-sm-3">Giới tính:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.GioiTinh)</dd>
                <dt class="col-sm-3">Ngày sinh:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgaySinh)</dd>
                <dt class="col-sm-3">Địa chỉ:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>
                <dt class="col-sm-3">Điện thoại:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DienThoai)</dd>
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                <dt class="col-sm-3">Hình:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Hinh)</dd>
                <dt class="col-sm-3">Hiệu lực:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HieuLuc)</dd>
                <dt class="col-sm-3">Vai trò:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.VaiTro)</dd>
                <dt class="col-sm-3">Random Key:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RandomKey)</dd>
            </dl>
        </div>
    </div>
</div>
<br />
<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.MaKh" class="btn btn-primary">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
