@model ShopDongHoMVC.Data.KhachHang

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutFrame.cshtml";
}

<h1 class="text-center" style="background-color: #002D21; color: #daa37f; padding: 10px;">XÓA KHÁCH HÀNG</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-danger text-center">Bạn có chắc chắn muốn xóa khách hàng này?</h3>
            <div>
                <h4>Thông tin khách hàng</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">Mật khẩu:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.MatKhau)</dd>
                    <dt class="col-sm-2">Họ tên:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.HoTen)</dd>
                    <dt class="col-sm-2">Giới tính:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.GioiTinh)</dd>
                    <dt class="col-sm-2">Ngày sinh:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.NgaySinh)</dd>
                    <dt class="col-sm-2">Địa chỉ:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.DiaChi)</dd>
                    <dt class="col-sm-2">Điện thoại:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.DienThoai)</dd>
                    <dt class="col-sm-2">Email:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
                    <dt class="col-sm-2">Hình:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Hinh)</dd>
                    <dt class="col-sm-2">Kích hoạt ngay:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.HieuLuc)</dd>
                    <dt class="col-sm-2">Vai trò:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.VaiTro)</dd>
                    <dt class="col-sm-2">Random Key:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.RandomKey)</dd>
                </dl>
                <br />
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="MaKh" />
                    <button type="submit" class="btn btn-danger">Xóa</button> |
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </form>
            </div>
        </div>
    </div>
</div>
